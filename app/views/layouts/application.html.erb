<!DOCTYPE html>
<html>
<head>
  <title>Money Rotation</title>
  <link rel="shortcut icon" href="/favicon.ico?v=2" />
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "outside", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "outside" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div id="<%= controller.controller_name %>_<%= controller.action_name %>">
      
      <div id="header">
        <h1>MoneyRotation</h1>
        <h2>Minimalistic budget tracking application</h2>
      </div>
      
      <div id="main">
        <% if !notice.blank? || !alert.blank? %>
        <div class="alerts">
          <% unless notice.blank? %>
            <div class="alert alert-success">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= notice %>
            </div>
          <% end %>
      
          <% unless alert.blank? %>
            <div class="alert alert-error">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= alert %>
            </div>
          <% end %>
        </div>
        <% end %>
                   
        <%= yield %>
      </div>
      <div id="footer">
        yy
      </div>
    </div>
  </div>  
</body>
</html>
