<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <h2>Sign in</h2>

  <div>
    <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email address" %>
  </div>

  <div>
    <%= f.password_field :password, :placeholder => "Password", :class => "input-block-level" %>
  </div>

  <% if devise_mapping.rememberable? -%>   
    <%= f.label :remember_me, :class => "checkbox" do %>
       <%= f.check_box :remember_me %> 
       Remember me
    <% end %>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
