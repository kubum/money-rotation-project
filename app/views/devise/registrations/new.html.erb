<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <h2>Sign up</h2>
  
  <%= devise_error_messages! %>

  <div>
    <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email address" %>
  </div>

  <div>
    <%= f.password_field :password, :placeholder => "Password", :class => "input-block-level" %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "input-block-level" %>
  </div>

  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
